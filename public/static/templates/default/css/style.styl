.navbar-primary
    display: block;
    background-color: #fff
    overflow hidden
    padding: 24px 0px
    width: 100%
    z-index: 99
    .brand
        display: block
        float: left
        width: 60px
        a
            display: block
            width: 100%
            img
                display: block
                width 100%;
    .search 
        display: block
        float: right 
        margin-right:24px
        margin-top: 3px
        width: 260px
        .form-control
            padding-top: 10px
            padding-bottom: 10px
        .btn
            top -2px
    .main
        display: inline-block
        float right 
        overflow: hidden
        ul
            display: inline-block
            float: right 
            overflow hidden
            padding: 0px
            width: 100%
            li
                display inline-block
                float: left
                a
                    color c2
                    display: inline-block
                    font-size: 1.1em
                    padding: 12px
                    line-height: normal
                    text-decoration: none
                    font-weight: 400px
                    i
                        color: c2
                    .counter
                        color c4
                    &:hover
                        background-color: c1
                        border-radius: 23px
                        color: #fff !important
                &:hover
                    ul
                        display: block
                ul
                    background-color: #fff
                    border-top: 2px solid #d8d8d8
                    border-radius: 8px
                    display: none
                    position: absolute
                    margin-top:-2px
                    // overflow: inherint
                    max-width: 210px
                    z-index 100
                    .dropdown-divider
                        margin 1px
                        border-top: 1px solid #d6d6d6
                    li
                        display: block
                        width: 100%
                        a
                            display: block
                            border-radius: 0px
                            font-size: 1.1em
                            font-weight: 500
                            width: 100%
                            &:hover
                                border-radius: 0px
                                color: #fff
                                i
                                    color #fff
                        &:first-child
                            a
                                &:hover
                                    border-radius: 8px 8px 0px 0px
                        &:last-child
                            a
                                &:hover
                                    border-radius: 0px 0px 8px 8px
                &:after
                    bottom: 100%
                    left: 9%
                    border: solid transparent
                    content: ""
                    height: 0
                    width: 0
                    position: absolute
                    pointer-events: none
                    border-color: rgba(136,183,213,0)
                    border-bottom-color: #d8d8d8
                    border-width: 10px
                    margin-left: -10px
                a.user-profile
                    overflow: hidden
                    position: relative
                    padding: 0px
                    padding-right: 16px
                    font-weight: 500
                    margin-top: 4px
                    img
                        border-radius: 50%
                        width: 36px
                        height: 36px
                        float: left
                        display: block  
                    span
                        display: inline-block
                        margin-left: 6px
                        margin-top: 8px
                        float: left
                        i
                            color: c2
                    &:hover
                        background-color: c2 !important
                        color c4
                        i
                            color: #fff
                a.icon
                    padding: 6px 12px
                    position relative
                    font-size: 1.7em
                    &:hover
                        background-color: transparent
                        i
                            color c1 !important
                    .counter
                        color: c1
                        align-items: center
                        background-color: c2
                        border-radius: 50%
                        display: flex
                        justify-content: center
                        font-size: .4em
                        font-weight: 500
                        height: 20px
                        position absolute
                        width: 18px
                        right: 6px
                        top 2px
                        z-index 10
                        &:hover
                            color #fff

