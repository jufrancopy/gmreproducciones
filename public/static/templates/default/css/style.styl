        background-color: #fff
        height: 100vh
        max-width: 86%
        position relative
        transition: all 0.1s easy-in-out
        width 86%
        .user-profile
            background-color: #fff
            margin-bottom: 4px
            .info
                overflow: hidden
                .avatar
                    display: block 
                    float left
                    margin-right: 8px
                    width: 48px
                    img
                        border-radius: 50%
                        display: block
                        width: 100%
                .user-info
                    display: block
                    float left
                    width: calc(100% - 56px)
                    span
                        display: block
                        color #555
                        font-size: .9em
                        font-weight: 
