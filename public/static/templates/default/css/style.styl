    background-color: rgba(255,255,255,.9)
    align-items center
    display: flex
    justify-content: center
    height: 100vh
    left: 0px
    position: fixed
    top 0px
    width: 100%
    z-index 1000
    .box
        display: block
        min-width: 420px
        width: 160px    
        border 1px solid #f7f8f9
        .cart
            overflow: hidden
            width: 100%
            img
