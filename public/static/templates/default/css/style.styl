            font-size: 2em
            display: flex
            justify-content: center
            position absolute
            height: 200px
            width: 200px
            &:hover 
                background-color: rgba(0, 0, 0, .4)
        img
            border-radius: 50%
            display: block
            width: 100%
            height: 200px
            // width: 200px
        .form-control   
            display: none !important


@media only screen and (max-width 728px)
    body
        margin 0px;
    .navbar-primary
        .brand
            width: 40px
        .search
            display none
            margin-top: 8px
            width: 100% !important
        .main
            ul
                li
                    a.icon
                        padding-top: 0px
                        padding-bottom: 0px
                        .counter
                            right: 0px 
                            top: 0px
    .hide-in-mobile
        display: none !important
    .show-in-mobile
        display: block !important
        
@keyframes loading_image{
    0%{
        margin-left: -100%;
    }
    100%{
        margin-left: 100%;
    }
}