body
    align-items: center
    background-color:  #f6f6f6
    display: flex
    font-size: 14px
    justify-content: center
    margin 0px
    min-height: 100vh


.mtop16
    margin-top: 16px    

.box
    background-color: #fff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position: relative
    width: 500px
    .btn-success
        background-color: #ed1c33
        border: 0px
        width: 100%
    .form-control
        &:focus
        $:active
            outline: none
            box-shadow: none
    .inside
        padding: 16px 
    .header
        border-radius: 8px 8px 0px 0px
        a
            img
                width 30%
                margin: 0px auto
                display: block
                margin-top: 16px
    .footer 
        text-align: center
        a
            display inline block
            font-size: 0.8em
            // separar el ulitmo elemento
            &:last-child
                margin-left: 24px


@media only screen and (max-width 728px)
    .box
        width: 88%
        
