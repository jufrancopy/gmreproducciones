.home_action_bar
    background-color: #fff
    border-radius: 4px
    margin-top: 32px
    padding 12px
    .categories
        position: relative
        a
            background-color: #111111
            border-radius: 4px
            color: #fff 
            display: block
            text-transform: uppercase
            text-decoration: none
            padding: 12px
            width: 100%
            &:hover
                background-color: color1
        &:active
        &focus
            a
                background-color: color1            
        &:hover
            ul
                display: block
        ul
            display: none
            list-style none
            margin:  0px
            padding: 0px
            position: absolute
            width: 100%
            li
                a
                    background-color: #f8f8f8
                    border-radius: 0px
                    color: #111111
                    img
                        position relative
                        margin-top -6px
                        margin-right: 12px 
                        width: 20px
                    &:hover
                        color: #fff
    .input-group
        position relative
        i
            position absolute
            font-size: 1.2em
            top 14px
            left 12px
            z-index: 10
        .form-control
            border-radius 4px 0px 0px 4px
            padding: 10px 16px
            padding-left: 46px
            z-index: 2
            &:focus
                border 1px solid 
                color color1
                &::placeholder
                    color color1
        &:focus-within
            i
                color: color1
            .btn
                background-color: color1
                color #fff
        .btn
            background-color: #111111
            color: #fff
            &:hover
                background-color: color1 
.mainSlider
    display flex
    flex-wrap: wrap
    margin-top: 24px
    min-height: 380px
    overflow: hidden
    position: relative
    width: 100%
    background-color: #fff
    .slider-item
        align-items: center
        display: none
        border-radius: 4px
        color: #fff
        font-size: 4em
        justify-content: center
        position: absolute
        min-height: 380px
        transition .3s all ease-in-out
        width: 100% !important
        .col-md-7
        .col-md-5
            padding 0px
        .row
            margin 0px
            padding: 0px
        .content
            align-items: center
            display flex
            // background-color: #f6f6f6
            justify-content: center
            color #333
            height: 100%
            h2
            p
                display: block
                width: 100%
                
            .content-inside
                text-align: left
                border-left: 4px solid color2
                padding-left: 20px 
                max-width: 80%
                h2
                    font-size: 1.8em
                .btn
                    background-color: color2
                    color: #333
                    display inline-flex
                    margin 0px auto
    ul.navigation
        display: block
        margin 0px
        padding: 0px
        position absolute
        overflow: hidden
        // top calc(50% - 18px)
        top 50%
        z-index 9
        width: 100%
        li
            display: inline-flex
            float left
            a
                align-items center
                background-color: rgba(0,0,0,.5)
                border-radius: 50%
                display: flex
                justify-content: center
                height: 36px
                width: 36px
                text-decoration: none
                font-size: 2em
                color #fff
            &:first-child
                margin-left: 16px
                a
                    i
                        position relative
            &:last-child
                float right
                margin-right: 16px
                a
                    i
                        position: relative
                        margin-left: 2px
                        margin-top: 2px

.products_list
    display: block
    margin-top 32px
    padding: 0px
    overflow: hidden
    width: 100%
    .product
        display inline-block
        float: left
        margin-bottom: 24px
        margin-right: 2.4%
        width: 18%
        position: relative
        &:nth-child(5n)
            margin-right: 0px
        .image
            display: block
            width: 100%
            position relative
            overflow: hidden
            .overlay
                background-color: rgba(0,0,0,.4)
                display: none
                flex: 1
                height: 100% 
                position: absolute
                width: 100%
                transition: .3s all ease-in-out
                z-index: 9
                .btns
                    display: block
                    bottom: 8px
                    position: absolute
                    left: 3%
                    overflow: hidden
                    width: 94%
                    a
                        background-color: #fff
                        border-radius: 4px
                        box-sizing: border-box
                        color: color3
                        display: block
                        font-size: 1.2em
                        float: left
                        margin-right: 2%
                        padding: 6px
                        text-align: center
                        width: 32%
                        &:last-child
                            margin-right: 0px

            img
                display: block
                border-radius: 4px
                width: 100%
                transform: scale(1)
                transition: .3s all ease-in-out
                z-index 4
        &:hover
            .image 
                img 
                    transform: scale(1.1)
                .overlay
                    display flex    
        a
            display: block
            text-decoration: none
            position relative
            width: 100%
            
            .title
            .price
            .options
                display: block
                width: 100%
            .title
                font-size: 1.2em
                color #111111
                margin-top: 8px
            .price  
                font-size: 1.4em
                font-weight: bold
                margin-top: 4px
                color: #111111

@media only screen and (max-width 728px)
     nav
