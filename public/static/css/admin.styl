body
    background-color: #f5f6fa
    font-size: 14px
    font-family: 'Roboto', sans-serif;
a
    text-decoration: none !important

h2,h3,h4,h5,ul,body,html
    padding: 0px
    margin: 0px

.form-control
    &:focus
        box-shadow none
        outline: none
.mtop16
    margin-top 16px
.mtop32
    margin-top 32px

.mb16
    margin-bottom: 16px
.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width: 17%
        
    .col2
        float left
        width 83%
        
    
.sidebar
    background-color: #fff
    min-height: 100vh
    .section-top
        background-color: #565759
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15)
    .logo
        display: block
        margin: 0px auto
        padding-top: 24px
        width: 60%
    .user
        color: #fff
        padding: 16px
        a 
            color: #07f24a
            font-size: 1.2em
    .main
        display block
        margin-top: 8px
        ul
            li
                margin-bottom: 4px
                a
                    color: #8998AC !important
                    display: block
                    font-size: 1.1rem
                    padding 12px 16px
                    text-decoration: none
                    i 
                        margin-right: 10px
                    &:hover
                        background-color: #6b7ced
                        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15)
                        color: #fff !important
                        text-decoration: none
                        
                a.active
                    background-color: #6b7ced
                    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15)
                    color: #fff !important
                    text-decoration: none
                    
.navbar
    background-color: #6b7ced
    padding: 10px
    a   
        color: #fff 
.page
    padding-top: 16px
    padding-bottom: 16px

    .breadcrumb
        background-color: #fff
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15)
        
        // Agregado para ampliar breadrumb
        padding: 10px
        border-radius: 5px
        
        .bredacrumb-item
            a 
                &:hover
                    text-decoration: none
    .panel
        background-color: #fff
        border-radius: 6px
        border-bottom: 2px solid #6b7ced
        width: 100%
        .header
            border-bottom: 1px solid #e8e8e8      
            h2.title
                display inline-block
                color: #19213d
                font-size: 1.1em
                padding: 12px 16px
            ul
                display: inline-block
                float: right
                margin-right: 12px
                li
                    display: inline-block
                    position: relative;
                    a
                        color #333
                        display: inline-block
                        padding: 10px
                        &:hover
                            background-color #f0f0f0
                            color #222
                            text-decoration: none
                        i
                            color #6b7ced 
                    ul
                        background-color: #fff
                        display none
                        float: none;
                        position: absolute;
                        right -16px
                        width: 200px
                        li
                            display: inline-block
                            border-bottom: 1px solid #f0f0f0
                            width: 100%
                            &:last-child 
                                border-bottom: 0px
                            a 
                                display: block
                                
                    &:hover
                        ul
                            display: block
                            
                            
        .inside
            padding 16px
            .nav
                .nav-link
                    border: 1px solid #6b7ced
                    margin-right: 8px
                    &:hover
                        background-color: #6b7ced
                        color #fff
            .form_search
                display: none
                margin-bottom: 16px
                .btn
                    width: 100%
            .big_count
                display: block
                font-size: 2em
                text-align: center
                width: 100%
        .list-group
            border-radius: 0px!important
            a.list-group-item   
                border-left: 0px
                border-right: 0px
                .badge
                    float right !important
                &:first-child
                    border-top: 0px
                &:last-child
                    border-bottom: 0px
            a.active
                .badge
                    background-color #fff !important
                    color #333


.opts
    overflow: hidden
    a
        text-decoration: none
        align-items: center
        display: flex
        border-radius: 50%
        cursor: pointer
        font-size: 1em
        float: left
        justify-content: center
        margin-right: 8px
        height: 32px
        width: 32px
    a.edit
        background-color: #0211FB
        color: #fff
    a.inventory
        background-color: #ddc408
        color #fff
    a.deleted
        background-color: #e31330
        color #fff
    a.restore
        background-color: #3BC584
        color #fff

.product_gallery
    overflow hidden
    #product_file_image
        display none
    .btn-submit
        display: block
        margin-right: 1%
        width: 100%
        a
            border 1px dashed #6666
            border-radius: 4px
            color #333
            display block
            font-size: 1.5em
            text-align: center
            padding: 16px
            width 100%
            &:hover
                background-color: #6b7ced
                color #fff
    .tumbs
        overflow hidden
        
        .tumb
            float left
            margin-top: 16px
            position: relative
            width 48%
            a
                background-color: rgba(0,0,0 .5)
                display inline block
                position: absolute
                color: #fff
                padding 6px 10px
                bottom: 8px
                right 8px
                border-radius: 50%
            img
                border-radius: 4px
                width 100%
            &:nth-child(odd)
                margin-right: 4%
