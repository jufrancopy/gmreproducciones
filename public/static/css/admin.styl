.switch
    background-color: #f0f0f0
    border-radius: 20.4px
    overflow: hidden
    padding: 4px
    a
        border-radius: 16.4px
        display: block
        float: left
        font-size: .8em
        text-align: center
        padding: 8px
        width: 49%
        &:hover
            background-color: #fff
        &:last-child
            margin-left: 2%
    a.active
        background-color: color1
        color: #fff

.payments_methods
        a
            border-radius: 6px
            border: 1px solid #f0f0f0
            display: block
            margin-bottom: 6px
            padding: 8px 16px
            width: 100%
            i
                color: color1
            &:last-child
                margin-bottom: 0px
            &:hover
                background-color: color1
                color: #fff
        a.active
            background-color: color1
            color: #fff